@model IEnumerable<Product>

<h1>Lista Produktów</h1>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="card" style="width: 18rem; margin: 1rem;">
            @if (product.Thumbnail != null)
            {
                <img class="card-img-top" src="data:image/jpeg;base64,@Convert.ToBase64String(product.Thumbnail)" alt="@product.Name" style="width: 100px; height: 100px; object-fit: cover;" />
            }
            <div class="card-body">
                <h5 class="card-title">@product.Name</h5>
                <p class="card-text">@product.Description</p>
                <p class="card-text"><strong>Cena: </strong>@product.Price.ToString("C")</p>
                <p class="card-text"><strong>Dostępne: </strong>@product.StockQuantity</p>

                <form asp-controller="Cart" asp-action="AddToCart" method="post">
                    <input type="hidden" name="productId" value="@product.ProductId" />
                    <div class="form-group">
                        <label for="quantity">Ilość:</label>
                        <input type="number" name="quantity" class="form-control" min="1" max="@product.StockQuantity" value="1" />
                    </div>
                    <button type="submit" class="btn btn-success">Dodaj do koszyka</button>
                </form>

            </div>
        </div>
    }
</div>
